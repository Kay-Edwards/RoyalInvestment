        <div class="row">
			<div class="col-md-12">
				<h3>
					Hello <%=  user %>.
				</h3>
                <h3>
					Buying power: $<%=  balance %>
				</h3>
				<h3>
					Portfolio :
				</h3>
			</div>
		</div>
        <div class="row">
            <% portfolio.forEach(stock => { %>
                <div class ="card text-white bg-success m-5">
                    <h5 class="card-header">
                        <%= stock.tickername %>
                    </h5>
                    <div class="card-body bg-secondary">
                        <p class="card-text">
                            Amount Invested : <%= stock.buy_price * stock.quantity_of_stocks %>
                        </p>
                    </div>
                    <div class="card-footer">
                        No: of Share : <%= stock.quantity_of_stocks %>
                    </div>
                </div>
            <% }) %>
