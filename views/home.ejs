<body>
    <div class="container-fluid mainBody">
        <!-- STOCK SEARCH -->
        <div class="row">
            <div class="col-md-6">
                <div class="container">
                    <h6 style="width: 150px; margin-bottom: 0px; ">Search for stock</h6>
                    <form id="form" onsubmit= "return false" style="width: 400px; display: flex;">
                        <input type="text" id="code2" name="code" value=""><br>
                        <input id = "submit2" type="submit" value="Search" class="bg-success">
                    </form> 
                    <p id = "stockInfo"></p>
                </div>
            </div>
            <div class="col-md-6">
                <p class="log-out">
					<a href="/users/logout" class="btn btn-block btn-success">
						Log Out
					</a> 
				</p>
                <p class="log-out">
					<a href="/users/game" class="btn btn-block btn-success">
						Game
					</a> 
				</p>
            </div>
		</div>
        <div class="row">
            <section>
